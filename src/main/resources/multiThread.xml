<?xml version="1.0" encoding="UTF-8" ?>
<suite name="thread" parallel="method" thread-count="2">
    <!--

    method级别：所有用例都可以在不同的线程下去执行

    thread-count：代表了最大并发线程数

    xml文件配置这阵方式不能指定线程池，只有方法上才可以指定线程池
    -->

    <test name = "demo1">
        <classes name="d">
            <class name="com.lwm.testng.multiThread.MultiThreadOnXml"/>
            <class name="com.lwm.testng.BasicAnnotation"/>
            <class name="com.lwm.testng.multiThread.MultiThreadOnXml"/>
        </classes>
        <classes name="d1">
            <class name="com.lwm.testng.multiThread.MultiThreadOnXml"/>
            <class name="com.lwm.testng.BasicAnnotation"/>
            <class name="com.lwm.testng.multiThread.MultiThreadOnXml"/>
        </classes>

    </test>

    <test name = "demo2">
        <classes name="d3">
            <class name="com.lwm.testng.BasicAnnotation"/>
        </classes>

    </test>

</suite>